{
  "name": "ci-cd-demo",
  "version": "1.0.0",
  "description": "Node.js CI/CD Demo",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start": "serve public -l 5000",
    "build": "browserify src/main.js -o public/bundle.js",
    "watch": "watchify src/main.js -o public/bundle.js -v",
    "dev": "run-p start watch",
    "test": "jest",
    "lint": "eslint src/**/*.js"
  },
  "devDependencies": {
    "browserify": "^17.0.1",
    "eslint": "^9.24.0",
    "jest": "^29.7.0",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "serve": "^14.2.4",
    "watchify": "^4.0.0"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "express": "^5.1.0"
  }
}
